main
  line-height 1.6em
  display none
  flex-direction column
  margin 0 auto 0 auto
  transform-origin 50% 50%
  font-size 0.95rem
  @media (max-width: 640px)
    font-size 0.85rem
  @media (min-width: 640px)
    @media (max-width: 960px)
      font-size 0.9rem
  @media (max-width: 960px)
    margin 0
  .note
    box-sizing border-box
    position absolute
    left 50%
    top 13vh
    transform translateX(-50%) rotateZ(0deg) rotateY(0deg)
    z-index 1000
    opacity 0.87
    width 100%
    max-width 45em
    color rgba(0,0,0,0)
    img
      max-width 100%
    &:not(.active)
      pointer-events none
      @media (max-width: 960px)
        display none
        .card-body
          display none
    &.active
      opacity 1
      color initial
      max-width 55em
      @media (max-width: 960px)
        top 0
        height 100%
        padding-top 6em
        max-width 100%
      .card
        @media (max-width: 960px)
          min-height 100%
          border-radius 0
        box-shadow: 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22);
        max-height initial
    .card
      box-sizing border-box
      min-height 15em
      max-height 15em
      overflow hidden
      padding 0.5em
      transition color 0.1s
      .close
        display none
        @media (max-width: 960px)
          display initial
          position absolute
          right 0.5em
          top 0.5em
          font-size 1.5em
          font-weight bold
          cursor pointer
          color lightgray
          transition color 0.6s
          &:hover
            color $colorAccent
      &.backfaced
        .card-body
          display none
      .card-body
        padding 1.75em 2.3em
        @media (max-width: 640px)
          padding 1.55em 1.2em
        @media (min-width: 640px)
          @media (max-width: 960px)
            padding 1.55em 2.0em
        overflow hidden
        transition all 0.6s
      
body
  &.presentation
    background-color $colorLight
    main
      display flex
      .note
        &.active
          z-index 1005
        
body.no-js
    main
      opacity 0
      display flex
      animation appear 3s 1s ease-in-out 1 forwards
      .note:not(.active)
        margin-bottom 3em
        color initial
        pointer-events unset
        max-width 55em
        z-index 1000
        opacity 1
        position relative
        @media (max-width: 960px)
          display initial
          .card-body
            display initial
        .card
          max-height fit-content
              
